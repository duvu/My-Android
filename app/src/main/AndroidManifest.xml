<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.myandroid" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".info.PhoneAppsActivity"
            android:label="@string/my_phone_apps"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".info.MemoryActivity"
            android:label="@string/memory"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".info.ScreenshotActivity"
            android:label="@string/screenshot"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".info.CallLogActivity"
            android:label="@string/call_history"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".info.CameraInfomationActivity"
            android:label="@string/camera_information"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".info.InternetActivity"
            android:label="@string/internet"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".info.ScreenSizeActivity"
            android:label="@string/screen_size"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".info.ScreenDensityActivity"
            android:label="@string/screen_density"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".info.RamActivity"
            android:label="@string/ram"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".info.AndroidVersionActivity"
            android:label="@string/android_version"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".info.ManufacturerAndModelActivity"
            android:label="@string/manufacturer_and_model"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
