<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_app_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:contentDescription="@string/icon_application" />
    <LinearLayout
        android:id="@+id/layout_app_info"
        android:orientation="vertical"
        android:layout_toRightOf="@id/img_app_icon"
        android:layout_toEndOf="@id/img_app_icon"
        android:layout_toLeftOf="@+id/btn_app_del"
        android:layout_toStartOf="@+id/btn_app_del"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_app_installed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_app_del"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_noborder"
        app:srcCompat="@drawable/icon_delete"/>
</RelativeLayout>