<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_phone_apps"
    tools:context=".apps.PhoneAppsActivity">
    <RelativeLayout
        android:background="@color/colorSubToolbarPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/text_user_apps"
            android:layout_toLeftOf="@+id/middle_split"
            android:layout_toStartOf="@+id/middle_split"
            android:text="@string/text_user_apps"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/middle_split"
            android:layout_centerInParent="true"
            android:layout_width="0.5dp"
            android:background="@color/colorSubToolbarPrimaryDark"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/text_system_apps"
            android:text="@string/text_system_apps"
            android:layout_toRightOf="@+id/middle_split"
            android:layout_toEndOf="@+id/middle_split"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/apps_view_pager"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
